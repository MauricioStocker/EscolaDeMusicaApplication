<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background">

    <ImageView
        android:id="@+id/iconeAluno"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_menu_upload"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNomeAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Aluno"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtCpfAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF do Aluno"/>

        <TextView
            android:id="@+id/txtTelefoneAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone do Aluno"/>

        <TextView
            android:id="@+id/txtStatusAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status do Aluno"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>
