<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/funodetelaescolademusica"
    android:padding="16dp">

    <!-- Container para a foto do aluno -->

    <FrameLayout
        android:id="@+id/containerFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/fotoCarteirinha"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user" />
    </FrameLayout>

    <!-- Container para os dados do aluno -->
    <LinearLayout
        android:id="@+id/containerDados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerFoto"
        android:layout_marginTop="16dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomeCarteirinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nome do Aluno"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/matriculaCarteirinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Matrícula: 20240001"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cpfCarteirinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="CPF: 123.456.789-00"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dataNascCarteirinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Data de Nascimento: 01/01/2000"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Container para a logo da escola e textos adicionais -->
    <LinearLayout
        android:id="@+id/containerLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerDados"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoEscola"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/escolademusicarock"
             />

        <TextView
            android:id="@+id/textoAdicional1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Não serve como documento original"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textoAdicional2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Usar para caso sejá necessario se apresentar dentro da escola"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:background="@drawable/nossalocalizacao" />
    </LinearLayout>

</RelativeLayout>
