<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTurmaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turma ID" />

    <TextView
        android:id="@+id/textViewProfessorNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Professor" />

    <TextView
        android:id="@+id/textViewAlunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alunos" />

    <TextView
        android:id="@+id/textViewDataEncerramento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de Encerramento" />

</LinearLayout>
